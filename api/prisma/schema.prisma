// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int        @id @default(autoincrement())
  name     String
  role     Role       @relation(fields:[roleId], references:[id])
  roleId   Int
  team     Team       @relation(fields:[teamId], references:[id])
  teamId   Int
}

model Roles {
  id       Int        @id @default(autoincrement())
  name     String
  User     User[]
}

model Teams {
  id            Int        @id @default(autoincrement())
  teamName      String
  teamLeaderId  Int
  teamScore     Int
  game          Game @relation(fields:[gameId], references:[id])
  gameId        Int
  User          User[]
}

model Topics {
  id        Int         @id @default(autoincrement())
  name      String
  Phrase    Phrase[]
  GameTopic GameTopic[]
}

model Phrases {
  id        Int    @id @default(autoincrement())
  body      String
  wordCount Int
  topic     Topic  @relation(fields: [topicId], references: [id])
  topicId   Int
}

model Games {
  id        Int         @id @default(autoincrement())
  rounds    Int
  gameCode  String      @unique
  Team      Team[]
  User      User[]
  GameTopic GameTopic[]
}

model GameTopics {
  id      Int   @id @default(autoincrement())
  topic   Topic @relation(fields: [topicId], references: [id])
  topicId Int
  game    Game  @relation(fields: [gameId], references: [id])
  gameId  Int
}
